<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1"
    tools:context="tw.edu.fcu.recommendedfood.Activity.WaitingEatAddtoListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <EditText
                android:id="@+id/edt_title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2sp"
                android:background="@drawable/rectangle_drawable"
                android:hint="@string/enter_title"
                android:padding="6sp"
                android:textAppearance="?android:attr/textAppearanceMedium" />


            <EditText
                android:id="@+id/edt_content_text"
                android:layout_width="380sp"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:layout_margin="2sp"
                android:background="@drawable/rectangle_drawable"
                android:gravity="left"
                android:hint="@string/enter_content"
                android:padding="6sp"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.5">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/take_picture"
                        android:onClick="clickFunction"
                        android:src="@drawable/take_picture_icon" />

                    <ImageButton
                        android:id="@+id/record_sound"
                        android:onClick="clickFunction"
                        android:src="@drawable/record_sound_icon" />

                    <ImageButton
                        android:id="@+id/set_location"
                        android:onClick="clickFunction"
                        android:src="@drawable/location_icon" />

                    <ImageButton
                        android:id="@+id/set_alarm"
                        android:onClick="clickFunction"
                        android:src="@drawable/alarm_icon" />

                    <ImageButton
                        android:id="@+id/select_color"
                        android:onClick="clickFunction"
                        android:src="@drawable/select_color_icon" />
                </TableRow>
            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/cancel_item"
                        android:layout_margin="2sp"
                        android:onClick="onSubmit"
                        android:padding="6sp"
                        android:text="@android:string/cancel"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <Button
                        android:id="@+id/ok_teim"
                        android:layout_margin="2sp"
                        android:onClick="onSubmit"
                        android:padding="6sp"
                        android:text="@android:string/ok"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                </TableRow>

            </TableLayout>
        </LinearLayout>
    </LinearLayout>

</TableLayout>